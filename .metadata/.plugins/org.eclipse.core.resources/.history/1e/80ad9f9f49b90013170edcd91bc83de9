/**
 * 
 */
function getXMLRequest(func)
{
	var xmlRequest = new XMLHttpRequest();
      xmlRequest.onreadystatechange = function() {
         if (xmlRequest.readyState == 4 && xmlRequest.status == 200)
         {
            func(xmlRequest.responseText);
         }
      };
   
   return xmlRequest;   
}

function fetch()
{
	var nameField = document.getElementById("nameField");
	var xmlRequest = getXMLRequest(function(text){
		var JSONobj =  eval('('+text+')');
		alert(JSONobj);
		
		for(var i = 0; i < JSONobj.length; ++i)
		{
			nameField.appendChild(JSONobj[i].user.display_name);
		}
		nameField.innerHTML = nameField.innerHTML + JSONobj;
	});
	xmlRequest.open("GET", "Followers", true);
	xmlRequest.send();
	

}
